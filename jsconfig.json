{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "typeRoots": [
      "globals.d.ts"
    ],
    "allowImportingTsExtensions": true,
    "paths": {
      "#bot/*": [
        "./src/bot/*"
      ],
      "#shell/*": [
        "./src/shell/*"
      ],
      "#webserver/*": [
        "./src/webserver/*"
      ]
    }
  }
}
